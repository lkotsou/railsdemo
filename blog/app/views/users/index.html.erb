<h1>Listing users</h1>
<%= link_to "My Blog", posts_path,  :class => "btn btn-primary" %>
<table class="table">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Login</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>

  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.login %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'Show', user, :class => "btn" %></td>
    <td><%= link_to 'Edit', edit_user_path(user),  :class => "btn btn-success" %></td>
    <td><%= link_to 'Destroy', user, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path,  :class => "btn" %>
